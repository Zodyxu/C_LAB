//for loop
/*Program to claculate the sum of first n natural numbers(Positive intergers, 1,2,3...n known as natural numbers)*/

#include<stdio.h>
int main()
{
    int n,i,sum=0;
    printf("Enter a positive interger:");
    scanf("%d", &n);
    for(i=1; i<=n; i++)
    {
        sum+=i;
    }
    printf("sum=%d\n", sum);
    return 0;
}