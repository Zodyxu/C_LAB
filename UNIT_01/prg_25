//Grading System 
/*C program for compute student for 3 Subject based on total_marks, percentage, grade and display result(pass/fail)*/
#include <stdio.h>

int main()
{
    float m1, m2, m3, total, percentage;
    char grade;
    char result;

    printf("Enter marks of three subjects: ");
    scanf("%f %f %f", &m1, &m2, &m3);

    total = m1 + m2 + m3;
    percentage = (total / 300) * 100;

    if (percentage >= 90)
        grade = 'A';
    else if (percentage >= 80)
        grade = 'B';
    else if (percentage >= 70)
        grade = 'C';
    else if (percentage >= 60)
        grade = 'D';
    else
        grade = 'F';

    if (percentage >= 60)
        result = 'P';   // Pass
    else
        result = 'F';   // Fail

    printf("Total Marks: %.2f\n", total);
    printf("Percentage: %.2f%%\n", percentage);
    printf("Grade: %c\n", grade);

    if (result == 'P')
        printf("Result: Pass\n");
    else
        printf("Result: Fail\n");

    return 0;
}

